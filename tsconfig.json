{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noEmit": true,
    "rootDir": ".",
    "sourceMap": true,
    "types": ["vitest/globals", "node"]
  },
  "include": ["src", "tests", "scripts", "tools"],
  "exclude": ["node_modules", "dist", "dist-web", "src/web/**/*"]
}
